<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">
      <context:annotation-config />

      <bean class="it.kekw.clowngg.match.ClownMatchMgrImpl" id="clownMatchMgrImpl" >
            <property name="apiToken" value="${riot.api.token}"/>
            <property name="authHeaderKey" value="${riot.api.auth.header.key}"/>
      </bean>


      <bean class="it.kekw.clowngg.common.RestAdapter" id="riotMgr">
            <constructor-arg name="baseUrl" value="${riot.api.baseURL}" />
            <constructor-arg name="interfaceProxy" value="it.kekw.clowngg.riot.RiotMgrInterface" />
            <constructor-arg name="operations">
                  <map>
                        <entry key="getSummonerInfoBySummonerName">
                              <bean class="it.kekw.clowngg.common.RestOperation">
                                    <property name="path" value="${riot.api.summoner.path}" />
                                    <property name="httpMethod" value="GET" />
                              </bean>
                        </entry>
                  </map>
            </constructor-arg>
      </bean>


      <bean class="java.util.HashMap" id="restAdapterUsers">
            <constructor-arg name="m">
                  <map>
                        <entry key="riotMgr" value="clownMatchMgrImpl" />
                  </map>
            </constructor-arg>
      </bean>

</beans>